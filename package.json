  "bugs": {
    "url": "https://github.com/ShepherdOrg/shepherd/issues"
  },
  "homepage": "https://github.com/ShepherdOrg/shepherd#readme",
  "devDependencies": {
    "lerna": "^3.18.4",
    "prettier": "^1.18.2"
  }
}
