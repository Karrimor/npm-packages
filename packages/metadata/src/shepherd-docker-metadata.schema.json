{
  "$id": "https://shepherdorg.org/shepherd-docker-metadata.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Shepherd metadata to describe a deployer or container deployed with shepherd.",
  "type": "object",
  "properties": {
    "displayName": {
      "type": "string"
    },
    "deployerRole": {
      "type": "string",
      "enum": ["infrastructure","install", "migration"]
    },
    "deployCommand": {
      "type": "string",
      "description": "Command to pass into a deployer for executing deployment script"
    },
    "rollbackCommand": {
      "type": "string",
      "description": "Command to pass into a deployer for executing rollback script"
    },
    "migrationImage": {
      "type": "string"
    },
    "environment": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "value": {
            "type": "string"
          },
          "secret": {
            "type": "boolean"
          }
        }
      },
      "patternProperties": {
        "^.*$": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        }
      }
    },
    "hyperlinks": {
      "type": ["array"],
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "url": {
            "type": "string",
            "format": "uri",
            "pattern": "^https?://"
          }
        }
      }
    }
  },
  "required": [
    "displayName"
  ],
  "additionalProperties": false
}


