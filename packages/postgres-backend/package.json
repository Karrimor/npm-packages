{
  "name": "@shepherdorg/postgres-backend",
  "version": "2.0.0",
  "description": "Postgres backend for shepherd state store",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "dependencies": {
    "bluebird": "^3.7.0",
    "lodash": "^4.17.15",
    "pg": "^7.12.1"
  },
  "peerDependencies": {
    "@shepherdorg/metadata": "^1.0.0",
    "@shepherdorg/state-store": "^1.0.0"
  },
  "devDependencies": {
    "@shepherdorg/metadata": "^2.0.0",
    "@shepherdorg/state-store": "^2.0.0",
    "@shepherdorg/storage-backend-tester": "^2.0.0",
    "@types/chai": "^4.2.3",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.7.11",
    "chai": "^4.2.0",
    "expect.js": "0.3.1",
    "mocha": "^6.2.1",
    "should": "11.1.1",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.3"
  },
  "scripts": {
    "build": "tsc",
    "pretest": "npm run start-postgres",
    "test": "npm run integrationtest",
    "posttest": "npm run kill-postgres",
    "integrationtest": "SHEPHERD_PG_PORT=54321 mocha --exit --require ts-node/register --recursive './**/*.integrationtest.ts'",
    "itdd": "SHEPHERD_PG_PORT=54321 mocha --exit -R dot --require ts-node/register --recursive --watch-extensions ts,js,json --watch './**/*.integrationtest.ts'",
    "prepublishOnly": "yarn install --frozen-lockfile && npm run build",
    "start-postgres": "docker run --rm --name postgres-it -e POSTGRES_PASSWORD=mysecretpassword -d -p 54321:5432 postgres && sleep 1",
    "kill-postgres": "docker rm -f postgres-it"
  }
}
