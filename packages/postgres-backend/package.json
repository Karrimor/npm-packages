{
  "name": "@shepherdorg/postgres-backend",
  "version": "0.0.2",
  "description": "Postgres backend for shepherd state store",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "dependencies": {
    "@shepherdorg/typescript-types": "^0.0.2",
    "bluebird": "^3.7.0",
    "lodash": "^4.17.15",
    "pg": "^7.12.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.3",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.7.11",
    "chai": "^4.2.0",
    "expect.js": "0.3.1",
    "mocha": "^6.2.1",
    "should": "11.1.1",
    "typescript": "^3.6.3",
    "ts-node": "^8.4.1"
  },
  "scripts": {
    "build": "tsc",
    "pretest": "npm run start-postgres",
    "test": "npm run integrationtest",
    "posttest": "npm run kill-postgres",
    "integrationtest": "mocha --exit --require ts-node/register --recursive './**/*.integrationtest.ts'",
    "itdd": "mocha --exit -R dot --require ts-node/register --recursive --watch-extensions ts,js,json --watch './**/*.integrationtest.ts'",
    "prepublishOnly": "yarn install --frozen-lockfile && npm run build",
    "start-postgres": "docker run --rm --name postgres -e POSTGRES_PASSWORD=mysecretpassword -d -p 5432:5432 postgres",
    "kill-postgres": "docker stop postgres"
  }
}
