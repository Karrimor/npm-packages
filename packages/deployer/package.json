    "shepherd.js": "src/shepherd.js",
    "classify-k8s-document": "bin/deploymentdocument-classifier.js"
  },
  "dependencies": {
    "@shepherdorg/docker-image-metadata-loader": "^0.1.2",
    "@shepherdorg/exec": "0.0.1",
    "@shepherdorg/filestore-backend": "^1.0.0",
    "@shepherdorg/metadata": "^1.0.0",
    "@shepherdorg/nano-inject": "0.0.7",
    "@shepherdorg/postgres-backend": "^1.0.2",
    "@shepherdorg/state-store": "^1.0.0",
    "@shepherdorg/ui-push": "^1.0.3",
    "bluebird": "^3.7.1",
    "bunyan": "^1.8.12",
    "db-migrate": "^0.11.6",
    "db-migrate-pg": "^1.0.0",
    "handlebars": "^4.1.2",
    "js-yaml": "^3.10.0",
    "lodash": "^4.17.15",
    "tmp": "^0.1.0"
  },
  "devDependencies": {
    "@shepherdorg/cli": "^1.0.0",
    "@types/chai": "^4.2.3",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.7.11",
    "chai": "^4.2.0",
    "expect.js": "0.3.1",
    "mocha": "^6.2.1",
    "should": "^13.2.3"
  },
  "scripts": {
    "test": "npm run specs",
    "specs": "mocha --exit --recursive 'src/**/*.spec.js'",
    "tdd": "mocha --exit -R dot --recursive --watch-extensions js,json --watch 'src/**/*.spec.js'",
    "build-test-images": "cd e2etest/testimages && ./build-test-images.sh",
    "e2etest": "mocha --exit --recursive 'e2etest/**/*.e2etest.js'",
    "e2etdd": "mocha --exit -R dot --recursive --watch-extensions js,json,sh,json --watch 'e2etest/**/*.e2etest.js'",
    "prepublishOnly": "yarn install --frozen-lockfile && npm test",
    "start-postgres": "docker run --rm --name postgres -e POSTGRES_PASSWORD=mysecretpassword -d -p 5432:5432 postgres",
    "kill-postgres": "docker stop postgres"
  }
}
