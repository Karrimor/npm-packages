{
  "name": "@shepherdorg/deployer",
  "version": "2.0.0",
  "description": "Deployer application",
  "main": "src/shepherd.js",
  "bin": {
    "shepherd.js": "src/shepherd.js",
    "classify-k8s-document": "bin/deploymentdocument-classifier.js"
  },
  "dependencies": {
    "@shepherdorg/docker-image-metadata-loader": "^0.1.2",
    "@shepherdorg/exec": "^2.0.0",
    "@shepherdorg/filestore-backend": "^2.0.0",
    "@shepherdorg/metadata": "^2.0.0",
    "@shepherdorg/nano-inject": "^2.0.0",
    "@shepherdorg/postgres-backend": "^2.0.0",
    "@shepherdorg/state-store": "^2.0.0",
    "@shepherdorg/ui-push": "^2.0.0",
    "bluebird": "^3.7.1",
    "bunyan": "^1.8.12",
    "db-migrate": "^0.11.6",
    "db-migrate-pg": "^1.0.0",
    "handlebars": "^4.1.2",
    "js-yaml": "^3.10.0",
    "lodash": "^4.17.15",
    "oops-error": "^2.4.0",
    "tmp": "^0.1.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.3",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.7.11",
    "chai": "^4.2.0",
    "expect.js": "0.3.1",
    "mocha": "^6.2.1",
    "should": "^13.2.3",
    "ts-node": "^8.4.1",
    "typescript": "^3.7.2"
  },
  "scripts": {
    "build-test-images": "cd src/e2etest/testimages && ./build-test-images.sh",
    "start-postgres": "docker run --rm --name postgres -e POSTGRES_PASSWORD=mysecretpassword -d -p 5432:5432 postgres",
    "kill-postgres": "docker stop postgres",
    "specs": "mocha --exit --require ts-node/register --recursive 'src/**/*.spec.ts'",
    "tdd": "mocha --exit -R dot --require ts-node/register --recursive --watch-extensions ts,js,sh --watch 'src/**/*.spec.ts'",
    "integratedtest": "npm run build && mocha --exit --recursive 'dist/integratedtest/**/*.integratedtest.js'",
    "itdd": "mocha --exit -R dot --require ts-node/register --recursive --watch-extensions ts,js,sh --watch 'src/integratedtest/**/*.integratedtest.ts'",
    "test": "npm run specs",
    "build": "tsc && chmod +x dist/shepherd.js",
    "prepublishOnly": "yarn install --frozen-lockfile && npm run build && npm run test"
  }
}
