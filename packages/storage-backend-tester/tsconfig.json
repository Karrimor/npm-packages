{
  "compilerOptions": {
    "lib": ["es6"],
    "alwaysStrict": true,
    "types": ["node", "mocha"],
    "strict": true,
    "declaration": true,
    "module": "commonjs",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "target": "ES6",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "dist"],
  "types": ["@types/node", "@types/mocha", "@types/chai"]
}
